{
  "name": "@rcl/compiler",
  "version": "1.0.0",
  "description": "Compilation pipeline for RCL language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@rcl/core": "workspace:*",
    "@rcl/ast": "workspace:*",
    "@rcl/parser": "workspace:*",
    "@rcl/validation": "workspace:*",
    "@rcl/file-system": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
