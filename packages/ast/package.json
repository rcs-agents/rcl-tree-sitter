{
  "name": "@rcs-lang/ast",
  "version": "1.0.0",
  "description": "Parser-independent AST type definitions for RCL language",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format src --write"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.0.13",
    "typescript": "^5.0.0"
  },
  "files": ["dist/**/*"],
  "publishConfig": {
    "access": "public"
  }
}
