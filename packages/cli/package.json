{
  "name": "@rcl/cli",
  "version": "0.1.0",
  "description": "RCL command-line interface for compiling RCL files",
  "main": "dist/index.js",
  "bin": {
    "rcl-cli": "./dist/index.js",
    "rcl": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist",
    "demo.js"
  ],
  "scripts": {
    "build": "npm run build:ts",
    "build:ts": "tsc",
    "compile": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest --coverage",
    "clean": "rm -rf dist",
    "demo": "node demo.js",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@rcl/core-types": "file:../core-types",
    "@rcl/core-interfaces": "file:../core-interfaces",
    "@rcl/compiler": "file:../compiler",
    "@rcl/file-system": "file:../file-system",
    "commander": "^12.0.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.0.0",
    "chokidar": "^3.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/fs-extra": "^11.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}