{
  "name": "@rcl/language-service",
  "version": "0.1.0",
  "description": "Advanced language service providers for RCL",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "nr build:ts",
    "build:ts": "tsc",
    "compile": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "clean": "rm -rf dist",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@rcl/parser": "workspace:*",
    "@rcl/compiler": "workspace:*",
    "@rcl/core": "workspace:*",
    "@rcl/validation": "workspace:*",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "tree-sitter": "^0.21.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "files": ["dist/**/*"]
}
