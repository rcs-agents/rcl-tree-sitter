vars: {
  d2-config: {
    layout-engine: elk
    # Terminal theme code
    theme-id: 300
  }
}

# Coffee Shop Order Flow with Context State
title: Quick Coffee Order Flow - Context Inside Messages

# Layout direction
direction: down

# Start
start: {shape: circle}
start -> Welcome

# Welcome - Message Container
Welcome: {
  shape: rectangle
  # style: {
  #   fill: "#e3f2fd"
  #   stroke: "#1976d2"
  #   stroke-width: 2
  # }
  label: |md
    # Welcome
    "Welcome to Quick Coffee!"
    
    **Context:**
    (empty)
  |
}

Welcome -> ChooseSize: Order Coffee
Welcome -> ShowMenu: View Menu
Welcome -> StoreInfo: Store Hours

# ChooseSize - Message Container
ChooseSize: {
  shape: rectangle
  # style: {
  #   fill: "#e3f2fd"
  #   stroke: "#1976d2"
  #   stroke-width: 2
  # }
  label: |md
    # Choose Size
    "What size would you like?"
    
    **Context:**
    - size
    - price
  |
}

ChooseSize -> ChooseDrink: "Small/Medium/Large"

# ChooseDrink - Message Container
ChooseDrink: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  label: |md
    # Choose Drink
    "Great! A {size} coffee. What type?"
    
    **Context:**
    - size
    - price
    - drink
  |
}

ChooseDrink -> Customize: "Espresso/Latte/etc"

# Customize - Message Container
Customize: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  
  tooltip: Total abstinence is easier than perfect moderation

  label: |md
    # Customize Milk
    "Perfect! How would you like your milk?"
    
    `Context: size, price, drink, milk, extraCharge (optional)`
  |
}

Customize -> ConfirmOrder: "Regular/Skim/Soy/Oat/None"

# ConfirmOrder - Message Container
ConfirmOrder: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  label: |md
    # Confirm Order
    "{size} {drink} with {milk} milk"
    "Total: ${price + extraCharge}"
    
    **Context:**
    â€¢ size
    â€¢ price
    â€¢ drink
    â€¢ milk
    â€¢ extraCharge
  |
}

ConfirmOrder -> ProcessPayment: Confirm
ConfirmOrder -> OrderCancelled: Cancel

# ProcessPayment - Message Container
ProcessPayment: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  label: |md
    # Process Payment
    "Processing your payment..."
    
    **Context:**
    (all order details)
  |
}

# OrderComplete - Message Container
OrderComplete: {
  shape: rectangle
  style: {
    fill: "#c8e6c9"
    stroke: "#388e3c"
    stroke-width: 2
  }
  label: |md
    # Order Complete
    "Order Confirmed!"
    "Ready in 5-7 minutes"
    
    **Context:**
    (all order details)
  |
}

# OrderCancelled - Message Container
OrderCancelled: {
  shape: rectangle
  style: {
    fill: "#ffcdd2"
    stroke: "#d32f2f"
    stroke-width: 2
  }
  label: |md
    # Order Cancelled
    "Your order has been cancelled"
    
    **Context:**
    (cleared)
  |
}

ProcessPayment -> OrderComplete

# Additional flows
OrderCancelled -> Welcome
OrderComplete -> Welcome

# ShowMenu - Message Container
ShowMenu: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  label: |md
    # Show Menu
    "Our Coffee Menu"
    (carousel with coffee options)
    
    **Context:**
    (preserved from before)
  |
}
ShowMenu -> Welcome

# StoreInfo - Message Container
StoreInfo: {
  shape: rectangle
  style: {
    fill: "#e3f2fd"
    stroke: "#1976d2"
    stroke-width: 2
  }
  label: |md
    # Store Info
    "Open Mon-Fri 6am-7pm"
    "Weekends 7am-6pm"
    
    **Context:**
    (preserved from before)
  |
}
StoreInfo -> Welcome

