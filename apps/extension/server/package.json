{
  "name": "rcl-language-server",
  "description": "RCL Language Server",
  "version": "0.1.0",
  "license": "MIT",
  "main": "./out/server.js",
  "scripts": {
    "build": "tsc -b",
    "compile": "tsc -b",
    "dev": "tsc -b -w",
    "watch": "tsc -b -w",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "clean": "rm -rf out",
    "lint": "biome lint src",
    "format": "biome format src --write",
    "typecheck": "tsc -b --noEmit"
  },
  "dependencies": {
    "@rcl/core": "workspace:*",
    "@rcl/parser": "workspace:*",
    "@rcl/language-service": "workspace:*",
    "vscode-languageserver": "^8.0.0",
    "vscode-languageserver-textdocument": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/ui": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
