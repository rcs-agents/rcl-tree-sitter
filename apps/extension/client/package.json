{
  "name": "rcl-language-client",
  "description": "RCL Language Client",
  "version": "0.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "build": "tsc -b",
    "compile": "tsc -b",
    "dev": "tsc -b -w",
